{
  "entrypoint": "public/index.html",
  "shell": "public/src/app-shell.js",
  "fragments": [
    "public/src/app-view.js",
    "public/src/app-login.js",
    "public/src/app-view404.js"
  ],
  "sources": [
    "public/src/**/*",
    "public/images/**/*"
  ],
  "extraDependencies": [
    "public/manifest.json",
    "public/appconfig.json",
    "public/node_modules/@webcomponents/webcomponentsjs/*.js",
    "!public/node_modules/@webcomponents/webcomponentsjs/gulpfile.js",
    "public/node_modules/@webcomponents/webcomponentsjs/bundles/**"

  ],
  "lint": {
    "rules": ["polymer-3"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled",
      "basePath": true
    },
    {
      "preset": "es6-unbundled",
      "basePath": true
    }
  ],
  "moduleResolution": "node",
  "npm": true
}
